<div class="repositoryAccesses grid">
  <label for="repositoryAccessPublic" class="repositoryAccess repositoryAccess--public repositoryAccess--selected cell cell--6Col">
    <h2>Public</h2>
    <i class="fa fa-eye"></i>
    <p>Public repositories can be cloned by anyone without providing any credentials. Select this if the repository is hosted publicly on GitHub.</p>
    <input type=radio id="repositoryAccessPublic" name="repositoryAccess" value="public">
  </label>
  <label for="repositoryAccessPrivate" class="repositoryAccess repositoryAccess--private cell cell--6Col">
    <h2>Private</h2>
    <i class="fa fa-lock"></i>
    <p>Private repositories require credentials to be cloned. Select this if you are hosting your own Git repositories or use GitHub's Private Repositories.</p>
    <input type=radio id="repositoryAccessPrivate" name="repositoryAccess" value="private">
  </label>
</div>

<!--
  Example JavaScript that will toggle the selected state of labels
-->
<script>
  function toggleActiveState(event) {
    var elements = document.querySelectorAll('.repositoryAccess input[type=radio]')
    for(var i=0; i < elements.length; i++) {
      if(elements[i].checked) {
        elements[i].parentElement.classList.add('repositoryAccess--selected')
      } else {
        elements[i].parentElement.classList.remove('repositoryAccess--selected')
      }
    }
  }
  var elements = document.querySelectorAll('.repositoryAccess input[type=radio]')
  for(var i=0; i < elements.length; i++) {
    elements[i].addEventListener('change', toggleActiveState, false)
  }
</script>
